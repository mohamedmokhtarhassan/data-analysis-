    "#program to check if number is odd or even \n",
    "#to print floating point number with n number of decimal (\"{:.nf}\".format(number))\n",
    "num = float(input(\"enter a number: \"))\n",
    "if ( num % 2 ) == 0 :\n",
    "    print(\"{0} is even \".format(num))\n",
    "else:\n",
    "    print(\"{0} is odd \".format(num))"
